@model InAndOut.Models.Item

<h2> Update Expencese </h2>

<form method="post" asp-action="Update">

			<input asp-for="Id" hidden />

	<div class="border p-3">

		<div class="form-group row">
			<h2 class="pl-3 text-black-50 pl-3"> Update Expense </h2>
		</div>

		<div class="row mb-3">
			<label asp-for="ItemName" class="col-lg-2 col-form-label"></label>
			<div class="col-6">
				<input asp-for="ItemName" type="text" class="form-control"
					   id="expenseName" placeholder="expencese">
				<span asp-validation-for="ItemName" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label asp-for="Borrower" class="col-2 col-form-label"></label>
			<div class="col-5">
				<input asp-for="Borrower" type="text" class="form-control"
					   id="amount" placeholder="amount">
				@*<span>€</span>*@
				<span asp-validation-for="Borrower" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label asp-for="Lender" class="col-2 col-form-label"></label>
			<div class="col-5">
				<input asp-for="Lender" type="text" class="form-control"
					   id="amount" placeholder="amount">
				@*<span>€</span>*@
				<span asp-validation-for="Lender" class="text-danger"></span>
			</div>
		</div>

		<br />

		<div class="col-auto p-lg-2">
			<input type="submit" class="btn btn-success w-25" value="Update"
				   style="font-size: 1.2rem;" />
		</div>
	</div>
	@*width="75"*@
	@*<button type="submit" class="btn btn-primary">Create</button>*@

</form>

<br />
<br />

<div>
	<a asp-controller="Item" asp-action="Index"
	   class="btn btn-outline-danger w-25">
		Back to the List
	</a>
</div>

@*	Validation Client-side:	*@

@section scripts{
	<partial name="_ValidationScriptsPartial" />
}