@model IEnumerable<InAndOut.Models.Item>

<div class="container p-3">
	<div class="row pt-4 pb-4">
		<div class="col-7">
			<h2 class="text-primary"> Borrowed Items List </h2>
		</div>
		<div class="col-5 text-lg-right">
			<a class="btn btn-primary" asp-controller="Item" asp-action="Create">
				<strong> Create new Item </strong>
			</a>
		</div>
	</div>
	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped">

			<thead>
				<tr>
					<th>
						Item Name
					</th>
					<th>
						Borrower
					</th>
					<th>
						Lender
					</th>
				</tr>
			</thead>

			<tbody>

				@foreach (var item in Model)
				{
				<tr>
					<td width="30%"> @item.ItemName </td>
					<td width="30%"> @item.Borrower </td>
					<td width="30%"> @item.Lender </td>
				</tr>
				}

			</tbody>

		</table>
	}


</div>

