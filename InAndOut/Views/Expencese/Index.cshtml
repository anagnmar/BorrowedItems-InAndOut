@model IEnumerable<InAndOut.Models.Expencese>

<div class="container p-3">

	<div class="row pt-4 pb-4">
		<div class="col-7">
			<h2 class="text-primary"> Expenceses List </h2>
		</div>
		<div class="col-5 text-lg-right">
			<a class="btn btn-primary" asp-controller="Expencese" asp-action="Create">
				<strong> Create new Expencese </strong>
			</a>
		</div>
	</div>

	<br />

@if (Model.Count() > 0)
{

	<table class="table table-bordered table-striped">

		<thead>
			<tr>
				<th> Name </th>
				<th> Amount </th>
			</tr>
		</thead>

		<tbody>

			@foreach (var exp in Model)
			{
				<tr>
					<td width="50%"> @exp.Name </td>
					<td width="30%"> @exp.Amount </td>
				</tr>
			}

		</tbody>

	</table>

}


</div>
