@model IEnumerable<InAndOut.Models.ExpenseType>

<div class="container p-3">

	<div class="row pt-4 pb-4">
		<div class="col-7">
			<h2 class="text-primary"> Expense Type List </h2>
		</div>
		<div class="col-5 text-lg-right">
			<a asp-controller="ExpenseType"
			   asp-action="Create" class="btn btn-primary">
				<strong> Create new Expense Type </strong>
			</a>
		</div>
	</div>

	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th> Name </th>
					<th>  </th>
				</tr>
			</thead>
			<tbody>

				@foreach (var type in Model)
				{
					<tr>
						<td width="25%"> @type.Name </td>
						<td width="35%">
							@*text-right*@
							<div class="w-100 btn-group" role="group">
								<a asp-controller="ExpenseType" asp-action="Update"
								   asp-route-Id="@type.Id"
								   class="btn btn-primary  mx-2 "> Update	</a>

								<a asp-controller="ExpenseType" asp-action="Delete"
								   asp-route-id="@type.Id"
								   class="btn btn-danger  mx-2 "> Delete	</a>
							</div>
						</td>
					</tr>
				}

			</tbody>
		</table>
	}

</div>
