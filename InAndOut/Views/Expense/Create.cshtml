@model InAndOut.Models.Expense

<h2> Create Expenceses </h2>

<form method="post" asp-action="Create">

	<div class="border p-3">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group row">
			<h2 class="pl-3 text-black-50 pl-3"> Add Item </h2>
		</div>

		<div class="row mb-3">
			<label asp-for="ExpenseName" class="col-lg-2 col-form-label"></label>
			<div class="col-6">
				<input asp-for="ExpenseName" type="text" class="form-control"
					   id="expenseName" placeholder="expencese">
				<span asp-validation-for="ExpenseName" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label asp-for="Amount" class="col-2 col-form-label"></label>
			<div class="col-5">
				<input asp-for="Amount" type="text" class="form-control"
					   id="amount" placeholder="amount">
				@*<span>€</span>*@
				<span asp-validation-for="Amount" class="text-danger"></span>
			</div>
		</div>

		<br />

		<div class="col-auto p-0">
			<input type="submit" class="btn btn-success w-25" value="Create" />
		</div>
	</div>
	@*width="75"*@
	@*<button type="submit" class="btn btn-primary">Create</button>*@

</form>

<br />
<br />

<div>
	<a asp-controller="Expense" asp-action="Index"
	   class="btn btn-outline-danger w-50" style="font-size: 1.2rem;">
		Back to the List
	</a>
</div>

