@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">

	<div class="row pt-4 pb-4">
		<div class="col-7">
			<h2 class="text-primary"> Expenses List </h2>
		</div>
		<div class="col-5 text-lg-right">
			<a asp-controller="Expense" 
			   asp-action="Create" class="btn btn-info">
				<strong> Create new Expense </strong>
			</a>
		</div>
	</div>

	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th> Expense </th>
					<th> Amount </th>
					<th class="text-right">  </th>
				</tr>
			</thead>
			<tbody>

				@foreach (var exp in Model)
				{
					<tr>
						<td width="35%"> @exp.ExpenseName </td>
						<td width="13%"> @exp.Amount </td>
						<td width="30%">
																@*text-right*@
							<div class="w-100 btn-group text-right" role="group">
								<a asp-controller="Expense" asp-action="Update"
								   asp-route-Id="@exp.Id"
								   class="btn btn-primary  mx-2 text-right"> Update	</a>

								<a asp-controller="Expense" asp-action="Delete"
								   asp-route-id="@exp.Id"
								   class="btn btn-danger  mx-2 "> Delete	</a>
							</div>
						</td>
					</tr>
				}

			</tbody>
		</table>
	}

</div>
